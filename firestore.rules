rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    
    // Teams - members can read, owners can write
    match /teams/{teamId} {
      allow read, write: if request.auth != null;
    }
    
    // Integrations - authenticated users can read/write their team's data
    match /integrations/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // Metrics - authenticated users can read/write
    match /metrics/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // Workloads - authenticated users can read/write
    match /workloads/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // Invites - authenticated users can read/write
    match /invites/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // Assumptions - authenticated users can read/write
    match /assumptions/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // Datasets - authenticated users can read/write
    match /datasets/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // Scenarios - authenticated users can read/write
    match /scenarios/{doc} {
      allow read, write: if request.auth != null;
    }
  }
}
